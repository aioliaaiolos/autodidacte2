<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.autodidacte"
    android:installLocation="auto"
    android:versionCode="8"
    android:versionName="1.0.7">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="Les editions autodidacte"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <meta-data
            android:name="com.autodidacte.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.autodidacte.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name=".OcrCaptureActivity"
            android:label="Read Text" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SuccessActivity" />
        <activity
            android:name=".AccueilActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_alphabet"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".MenuOptionsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_menu_options"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".QuestionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_test_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".SubMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_menu"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".testActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_test"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".test2Activity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_test2"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>